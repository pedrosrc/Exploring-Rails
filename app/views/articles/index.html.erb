<div class="container mx-auto flex flex-col p-6">

<div class="flex justify-between">
  <h1 class="text-center text-xl p-6 bg-slate-800 text-white">Articles</h1>
  <button class="w-32 rounded-md bg-indigo-600 text-sm font-semibold text-white text-center"><%=link_to "New Article", new_article_path %></button> 
</div>

<ul class="flex flex-col gap-6">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li class="flex flex-col w-72 border-2 border-blue-500/100 rounded-lg p-4  bg-slate-900 text-white">
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>
</ul>

</div>