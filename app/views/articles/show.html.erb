<%= turbo_stream_from @article %>
<div class="w-full flex flex-col gap-4 mb-6">
  
  <div class="container text-left bg-slate-800 p-6 text-white">
    <h1 class="text-2xl font-bold">Title: <%= @article.title %></h1>
 
   <%= @article.body %>

    <p class="font-bold text-sm">Posted: <%= time_tag @article.created_at, "data-local": "time-ago" %></p>

    <ul class="flex w-96 flex-row gap-6 mt-6">
      <li class="rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold"><%= link_to "Edit", edit_article_path(@article) %></li>
      <li class="rounded-md bg-red-600 px-3 py-1.5 text-sm font-semibold">
        <%= link_to "Destroy", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
     </li>
      <li class="rounded-md bg-black px-3 py-1.5 text-sm font-semibold text-white">
        <a href="/articles" class="text-center underline-offset-1">Back to Home</a>
      </li>
    </ul>
  </div>
  
  <div class="w-96 p-6 shadow-lg rounded-lg bg-slate-700 ">
    <h2 class="text-xl font-bold text-white">Add a comment:</h2>
    <%= render 'comments/form', article: @article %>
  </div>

  <div id="comments" class="p-6 ">
    <h2 class="text-xl text-white font-bold">Comments:</h2>
    <%= render @article.comments %>
  </div>  

</div>
