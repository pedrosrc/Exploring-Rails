<div class="flex flex-col items-center rounded-lg justify-center m-4 px-6 py-8 mx-auto bg-slate-900">
<h2 class="text-xl text-white font-bold leading-tight mb-6">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field text-white mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", 
    class: "text-black p-2.5 rounded-lg focus:border-blue-500", placeholder: "name@company.com" %>
  </div>

  <div class="actions  text-white text-center mb-6 bg-indigo-600 hover:bg-indigo-700 focus:ring-4 focus:outline-none rounded-lg text-sm px-5 py-2.5">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<p class="text-white mb-4">OR</p>

<%= render "devise/shared/links" %>

</div>
