<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, 
    class: "w-64 text-white text-center mb-2 bg-black hover:bg-gray-600 focus:ring-4 focus:outline-none rounded-lg text-sm px-5 py-2.5" %><br />
  <% end %>
<% end %>

<%- if controller_name != 'sessions' %>
  <li class="text-white list-none">
    Do you have an account yet? <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-500" %><br />
  </li>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
 <li class="text-white list-none">Donâ€™t have an account yet? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-500" %></li><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-500" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>


