<div class="flex flex-col items-center rounded-lg justify-center m-4 px-6 py-8 mx-auto bg-slate-900">
<h2 class="text-xl text-white font-bold leading-tight mb-6">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field text-white mb-6">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
    class: "text-black p-2.5 rounded-lg focus:border-blue-500", placeholder: "name@company.com" %>
  </div>

  <div class="field text-white mb-6">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",
    class: "text-black p-2.5 rounded-lg focus:border-blue-500", placeholder: "••••••••" %>
  </div>

  <div class="field text-white mb-6">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
    class: "text-black p-2.5 rounded-lg focus:border-blue-500", placeholder: "••••••••" %>
  </div>

  <div class="actions text-white text-center mb-6 bg-indigo-600 hover:bg-indigo-700 focus:ring-4 focus:outline-none rounded-lg text-sm px-5 py-2.5">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
