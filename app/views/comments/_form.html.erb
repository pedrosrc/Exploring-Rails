<div class="rounded-lg">
  <%= form_with model: [ article, Comment.new ] do |form| %>
    <div class="mb-4">
        <label class="block text-white font-medium mb-2" for="name">
            Name
        </label>
        <%= form.text_field :commenter, class: "w-full appearance-none border py-2 px-3 text-black leading-tight focus:outline-none focus:border-gray-500 rounded-lg", 
        placeholder: "Write your user" %>
    </div>
    <div class="mb-4">
        <label class="block text-white font-medium mb-2" for="comment">
          Comment
        </label>
        <%= form.text_area :body, class: "w-full h-20 appearance-none border py-2 px-3 text-black leading-tight focus:outline-none focus:border-gray-500 rounded-lg", 
        placeholder: "Write your comment" %>    
    </div>
    <div class="mb-4">
      <label class="block text-white font-medium mb-2" for="comment">
        Status
      </label>
      <%= form.select :status, Visible::VALID_STATUSES, selected: 'public', class: "border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full" %>
    </div>
    <div class="flex justify-center">
      <button class="rounded-md bg-green-600 px-3 py-1.5 mt-6 text-sm font-semibold w-72">
        <%= form.submit %>
      </button>
    </div>
  <% end %>
</div>